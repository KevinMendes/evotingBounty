<assembly
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>files</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/resources/certificateProperties</directory>
			<outputDirectory>sdmConfig/certificateProperties</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/src/main/resources/plugin.xml</source>
			<outputDirectory>sdmConfig/</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/src/test/resources/keystore.properties</source>
			<outputDirectory>sdmConfig/</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/src/main/resources/keys_config.json</source>
			<outputDirectory>sdmConfig/</outputDirectory>
		</file>
	</files>
</assembly>
